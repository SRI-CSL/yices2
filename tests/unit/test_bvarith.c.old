#include <stdio.h>
#include <stdlib.h>
#include <inttypes.h>

#include "bv_constants.h"
#include "bvarith_expr.h"
#include "object_stores.h"
#include "bit_expr.h"

#ifdef MINGW

/*
 * Need some version of random()
 * rand() exists on mingw
 */
static inline int random(void) {
  return rand();
}

