  v[5] = arithvar_manager_mul_var(&manager, v[0], v[1]); // x y
  v[6] = arithvar_manager_mul_var(&manager, v[2], const_idx); // z
  v[7] = arithvar_manager_mul_var(&manager, v[5], v[1]); // x y^2
  v[8] = arithvar_manager_mul_var(&manager, v[0], v[4]); // x^3
