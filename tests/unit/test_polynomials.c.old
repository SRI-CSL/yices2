      arith_buffer_add_mono(&buffer, v[i], &alpha);
    }
    arith_buffer_normalize(&buffer);
    p1 = arith_buffer_getpoly(&buffer);
    printf("p1: ");
    print_polynomial(stdout, p1, &manager, 0);
    // compute phase and period
