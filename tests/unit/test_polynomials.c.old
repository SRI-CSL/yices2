  printf("result:  ");
  print_arith_buffer(stdout, &buffer, 0);
  printf("result:  ");
  arith_buffer_normalize(&buffer);
  print_arith_buffer(stdout, &buffer, 0);
  printf("\n\n");


  printf("Computing  poly[1] * poly[2]\n");
